<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Profil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:elevation="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pengaturan Akun"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/fans"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="@color/fans"
                    app:cardCornerRadius="50dp"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/hurufAwal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/namaUserLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Malik Ibrahim"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/fans"
                    android:textAlignment="center"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEditProfil"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="15dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="70dp">
                    <Button
                        android:id="@+id/btnEditProfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="Edit Profile"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/baseline_arrow_forward_24"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/change"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEditPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="15dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btnGantiPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="Ganti Password"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/baseline_arrow_forward_24"
                        android:textColor="@color/black"
                        android:drawableTint="@color/black"
                        android:drawableLeft="@drawable/reset_password"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLogout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="15dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btnLogOut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="Log Out"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/baseline_arrow_forward_24"
                        android:textColor="@color/black"
                        android:drawableTint="@color/black"
                        android:drawableLeft="@drawable/logout"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>