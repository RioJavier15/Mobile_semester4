<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfil">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="@drawable/custom_edittext">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Edit Profil"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp">
                <Button
                    android:id="@+id/btnKembali"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/baseline_arrow_back_24"/>
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/fans"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/txtUsernameEdit"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:hint="Masukkan Username"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/fans"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/txtAlamatEdit"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_home_24"
                android:padding="8dp"
                android:drawablePadding="8dp"
                android:hint="Masukkan Alamat"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.Handphone"
                android:textColor="@color/fans"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/txtNohpEdit"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_phone_android_24"
                android:padding="8dp"
                android:inputType="number"
                android:drawablePadding="8dp"
                android:hint="Masukkan Nomor Handphone"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="@color/fans"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/txtEmailEdit"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:padding="8dp"
                android:inputType="textEmailAddress"
                android:drawablePadding="8dp"
                android:hint="Masukkan E-mail"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btnsave"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textSize="15sp"
                />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>